{
  "manifest_version": 3,
  "name": "WebGuard",
  "short_name": "WG",
  "version": "2.0",
  "description": "WebGuard is a multimodal dark pattern detector and blocker",
  "icons": {
    "16": "/police.png",
    "32": "/police.png",
    "48": "/police.png",
    "192": "/police.png"
  },
  "permissions": ["activeTab"],
  "web_accessible_resources": [
    {
      "resources": ["/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "run_at" : "document_idle",
      "matches": ["https://*/*", "http://*/*"],
      "js": ["inject.js"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "index.html"
  }
}
